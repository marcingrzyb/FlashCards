<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.playmode.fragment.SessionSummary">

    <TextView
        android:id="@+id/time_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:gravity="center"
        android:text="@string/time_label"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:gravity="center"
        android:text="@string/time_label"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/total_words"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:autofillHints=""
        android:ems="15"
        android:gravity="center"
        android:hint="Number of FlashCards"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/words"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:autofillHints=""
        android:ems="15"
        android:gravity="center"
        android:hint="@string/front"
        android:textSize="24sp" />

    <FrameLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBarRemember"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:progress="55" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Remebered"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBarFavourite"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:progress="55" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favourite"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </FrameLayout>

<!--    TODO: ??-->
    <FrameLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
